                                <!--Footballers list-->
                                <Grid Height="300">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Style="{StaticResource FavsScrollViewer}">
                                        <WrapPanel x:Name="wpReserveFormation">
                                            <WrapPanel.Resources>
                                                <Style TargetType="userControl:ucFootballer">
                                                    <Setter Property="Width" Value="280" />
