                        <TextBlock 
                            Text="Thêm cầu thủ vào sân"
                            Style="{StaticResource H2}"
                            FontSize="14"/>
                        <Border Width="280"
                                Height="100"
                                BorderBrush="#fff"
                                BorderThickness="1"
                                Background="Transparent"
                                CornerRadius="12"
                                Margin="0 5 0 0">
                            <StackPanel>
                                <ComboBox
                                    x:Name="cbSelectPlayerAdd"
                                    Style="{StaticResource MaterialDesignComboBox}"
                                    materialDesign:ColorZoneAssist.Mode="Dark"
                                    Foreground="#fff"
                                    BorderBrush="#fff"
                                    Width="180"
                                    SelectedIndex="0"
                                    Height="30"
                                    VerticalAlignment="Top"
                                    Margin="0 10 0 0">
                                    <ComboBoxItem
                                        Content="9. Nguyễn Văn A" />
                                    <ComboBoxItem
                                        Content="11. Trần Văn B" />
                                </ComboBox>
                                <Button 
                                    x:Name="btnAddPlayer"
                                    Content="Thêm vào sân"
                                    Style="{StaticResource MyGreenButtonStyle}"
                                    Width="100"
                                    Padding="0"
                                    Margin="0 10 0 0"
                                    FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!--Switch Players-->

                        <TextBlock 
                            Text="Danh sách thay người"
                            Style="{StaticResource H2}"
                            FontSize="14"
                            Margin="0 30 0 0"/>

                        <materialDesign:Card
                            Width="320"
                            Height="140"
                            Background="#3a3a3a"
                            Margin="0 5 0 0"
                            UniformCornerRadius="12">
                            <StackPanel>
                                <!--Header-->
                                <Grid Height="25">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="0.4*"/>
                                        <ColumnDefinition Width="0.4*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <TextBlock Text="Rời sân" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Medium"/>
