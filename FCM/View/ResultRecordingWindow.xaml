                                    <Grid Grid.Column="1">
                                        <TextBlock Text="Vào sân" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Medium"/>
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <TextBlock Text="TG" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Medium"/>
                                    </Grid>
                                    <Grid Grid.Column="3">
                                        <TextBlock Text="Sửa" Foreground="#fff" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" FontWeight="Medium"/>
                                    </Grid>
                                </Grid>
                                <Rectangle Height="1" Width="320" Fill="#fff" />
                                <!--List-->
                                <Grid Height="120">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Style="{StaticResource FavsScrollViewer}">
                                        <WrapPanel x:Name="wpSwitched">
                                            <WrapPanel.Resources>
                                                <Style TargetType="userControl:ucSwitchedPlayers">
                                                    <Setter Property="Width" Value="320" />
                                                    <Setter Property="Height" Value="40" />
                                                </Style>
                                            </WrapPanel.Resources>
                                            <!--Add here-->
                                            <userControl:ucSwitchedPlayers />
                                            <userControl:ucSwitchedPlayers />
                                            <userControl:ucSwitchedPlayers />
                                        </WrapPanel>
                                    </ScrollViewer>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>

                        <Button 
                            x:Name="btnSwitch"
                            Style="{StaticResource MyGreenButtonStyle}"
                            Content="Thay người"
                            Width="110"
                            Padding="0"
                            FontSize="14"
                            Margin="0 5 0 0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding SwitchPlayersCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>

                    </StackPanel>
                </Grid>

            </Grid>
        </Grid>

    </Grid>
