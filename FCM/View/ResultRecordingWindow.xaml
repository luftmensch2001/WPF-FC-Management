                            <!--Header-->
                            <Grid Height="25"
                                  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Bottom"/>
                                        <Setter Property="Foreground" Value="#fff"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid Grid.Column="0">
                                    <TextBlock Text="Số áo" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Cầu thủ" />
                                </Grid>
                                <Grid Grid.Column="2">
                                    <TextBlock Text="Thời gian" />
                                </Grid>
                                <Grid Grid.Column="3">
                                    <TextBlock Text="Loại bàn thắng" />
                                </Grid>
                                <Grid Grid.Column="4">
                                    <TextBlock Text="Chỉnh sửa" />
                                </Grid>
                            </Grid>
