                                </Grid>
                                <Grid Grid.Column="2">
                                    <TextBlock Text="Thời gian" />
                                </Grid>
                                <Grid Grid.Column="3">
                                    <TextBlock Text="Loại bàn thắng" />
                                </Grid>
                                <Grid Grid.Column="4">
                                    <TextBlock Text="Chỉnh sửa" />
                                </Grid>
                            </Grid>
                            <!--Line-->
                            <Rectangle Height="1" Width="410" Fill="White" VerticalAlignment="Top" Margin="0 10 0 0"/>
                            <!--Goals List-->
                            <Grid Height="285">
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Style="{StaticResource FavsScrollViewer}">
                                    <WrapPanel x:Name="wpGoalsTeam2">
                                        <WrapPanel.Resources>
                                            <Style TargetType="userControl:ucGoal">
                                                <Setter Property="Width" Value="410" />
                                                <Setter Property="Height" Value="35" />
                                            </Style>
                                        </WrapPanel.Resources>
                                        <!--Add Goal here-->
                                        <userControl:ucGoal />
                                        <userControl:ucGoal />
                                        <userControl:ucGoal />
                                        <userControl:ucGoal />
                                    </WrapPanel>
                                </ScrollViewer>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </Grid>
            <!--Cards list-->
            <Grid 
                x:Name="grdCardsTab"
                Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock 
                Text="Danh sách thẻ phạt"
                Style="{StaticResource H2}" 
                VerticalAlignment="Top"
                Grid.ColumnSpan="2"
                Margin="0 10 0 0"/>

                <!--Team 1 Cards-->
                <Grid Grid.Column="0">
                    <materialDesign:Card 
                    Background="#3a3a3a"
                    UniformCornerRadius="16"
                    Width="410"
                    Height="290"
                    Margin="0 0 0 0">
                        <StackPanel>
                            <!--Header-->
                            <Grid Height="25"
                                  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Bottom"/>
                                        <Setter Property="Foreground" Value="#fff"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid Grid.Column="0">
                                    <TextBlock Text="Số áo" />
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock Text="Cầu thủ" />
                                </Grid>
                                <Grid Grid.Column="2">
                                    <TextBlock Text="Thời gian" />
                                </Grid>
                                <Grid Grid.Column="3">
                                    <TextBlock Text="Loại thẻ" />
                                </Grid>
                                <Grid Grid.Column="4">
                                    <TextBlock Text="Chỉnh sửa" />
                                </Grid>
                            </Grid>
                            <!--Line-->
                            <Rectangle Height="1" Width="410" Fill="White" VerticalAlignment="Top" Margin="0 10 0 0"/>
                            <!--Card List-->
                            <Grid Height="245">
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Style="{StaticResource FavsScrollViewer}">
                                    <WrapPanel x:Name="wpCardsTeam1">
                                        <WrapPanel.Resources>
                                            <Style TargetType="userControl:ucCard">
                                                <Setter Property="Width" Value="410" />
                                                <Setter Property="Height" Value="35" />
                                            </Style>
                                        </WrapPanel.Resources>
                                        <!--Add Cards here-->
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                    </WrapPanel>
                                </ScrollViewer>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <Button 
                        x:Name="btnAddCardTeam1"
                        Style="{StaticResource MyGreenButtonStyle}"
                        VerticalAlignment="Bottom"
                        Margin="0 0 0 30"
                        Width="100"
                        Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                            Kind="BookPlus"/>
                            <TextBlock Text="Thêm thẻ" 
                                   FontWeight="Regular"
                                   Margin="5 0 0 0"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!--Team 2 Cards-->
                <Grid Grid.Column="1">
                    <materialDesign:Card 
                    Background="#3a3a3a"
                    UniformCornerRadius="16"
                    Width="410"
                    Height="290"
                    Margin="0 0 0 0">
                        <StackPanel>
                            <!--Header-->
                            <Grid Height="25"
                                  VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
