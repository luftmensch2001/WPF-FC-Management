                            <Rectangle Height="1" Width="410" Fill="White" VerticalAlignment="Top" Margin="0 10 0 0"/>
                            <!--Goals List-->
                            <Grid Height="285">
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Style="{StaticResource FavsScrollViewer}">
                                    <WrapPanel x:Name="wpGoalsTeam1">
                                        <WrapPanel.Resources>
                                            <Style TargetType="userControl:ucGoal">
                                                <Setter Property="Width" Value="410" />
                                                <Setter Property="Height" Value="35" />
                                            </Style>
                                        </WrapPanel.Resources>
                                        <!--Add Goal here-->
                                        <userControl:ucGoal />
                                        <userControl:ucGoal />
                                        <userControl:ucGoal />
                                        <userControl:ucGoal />
                                        <userControl:ucGoal />
                                        <userControl:ucGoal />
                                    </WrapPanel>
                                </ScrollViewer>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

