                                    <WrapPanel x:Name="wpCardsTeam2">
                                        <WrapPanel.Resources>
                                            <Style TargetType="userControl:ucCard">
                                                <Setter Property="Width" Value="410" />
                                                <Setter Property="Height" Value="35" />
                                            </Style>
                                        </WrapPanel.Resources>
                                        <!--Add Cards here-->
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                        <userControl:ucCard />
                                    </WrapPanel>
                                </ScrollViewer>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                    <Button 
                        x:Name="btnAddCardTeam2"
                        Style="{StaticResource MyGreenButtonStyle}"
                        VerticalAlignment="Bottom"
                        Margin="0 0 0 30"
                        Width="100"
                        Padding="0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                            Kind="BookPlus"/>
                            <TextBlock Text="Thêm thẻ" 
                                   FontWeight="Regular"
                                   Margin="5 0 0 0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
            <!--Formation-->
            <Grid 
                x:Name="grdFormationsTab"
                Visibility="Hidden">
                <Grid.Resources>
                    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#fff"/>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--Select team-->
                <ComboBox
                        x:Name="cbSelectedTeam"
                        Style="{StaticResource MaterialDesignComboBox}"
                        materialDesign:ColorZoneAssist.Mode="Dark"
                        Foreground="#fff"
                        BorderBrush="#fff"
                        Width="150"
                        IsEditable="False"
                        SelectedIndex="0"
                        Height="30"
                        VerticalAlignment="Top"
                        Grid.ColumnSpan="3">
                    <ComboBoxItem
                                x:Name="cbiTeam1"
                                Content="FC Mèo" />
                    <ComboBoxItem
                                x:Name="cbiTeam2"
                                Content="FC Chó" />
                </ComboBox>
                <!--Main Formation-->
                <Grid Grid.Column="0">
                    <StackPanel>
                        <TextBlock Text="Đội hình trên sân"
                                   Style="{StaticResource H2}"
                                   FontSize="16"
                                   Margin="0 40 0 0"/>
                        <materialDesign:Card
                            Width="280"
                            Height="350"
                            Margin="0 10 0 0"
                            Background="#3a3a3a"
                            UniformCornerRadius="12">
                            <StackPanel>
                                <!--Header-->
                                <Grid Height="25"
                                  VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="1.3*"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                                            <Setter Property="Foreground" Value="#fff"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </Grid.Resources>
