                <Grid Grid.Column="2">
                    <StackPanel>
                        <TextBlock Text="Đội hình dự bị"
                                   Style="{StaticResource H2}"
                                   FontSize="16"
                                   Margin="0 40 0 0"/>
                        <materialDesign:Card
