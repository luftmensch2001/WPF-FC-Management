                Style="{StaticResource H2}" 
                VerticalAlignment="Top"
                Grid.ColumnSpan="2"
                Margin="0 10 0 0"/>

                <!--Team 1 Goals-->
                <Grid Grid.Column="0">
                    <materialDesign:Card 
                    Background="#3a3a3a"
                    UniformCornerRadius="16"
                    Width="410"
                    Height="330"
                    Margin="0 0 0 0">
