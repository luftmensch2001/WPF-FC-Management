                                    <Grid Grid.Column="1">
                                        <TextBlock Text="Cầu thủ" />
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <TextBlock Text="Vị trí" />
                                    </Grid>
                                    <Grid Grid.Column="3">
                                        <TextBlock Text="Thẻ phạt" />
                                    </Grid>
                                </Grid>
                                <!--Line-->
                                <Rectangle Height="1" Width="280" Fill="White" VerticalAlignment="Top" Margin="0 10 0 0"/>
                                <!--Footballers list-->
                                <Grid Height="300">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      Style="{StaticResource FavsScrollViewer}">
                                        <WrapPanel x:Name="wpMainFormation">
                                            <WrapPanel.Resources>
                                                <Style TargetType="userControl:ucFootballer">
                                                    <Setter Property="Width" Value="280" />
                                                    <Setter Property="Height" Value="50" />
                                                </Style>
                                            </WrapPanel.Resources>
                                            <!--Add here-->
                                            <userControl:ucFootballer />
                                            <userControl:ucFootballer />
                                            <userControl:ucFootballer />
                                            <userControl:ucFootballer />
                                            <userControl:ucFootballer />
                                        </WrapPanel>
                                    </ScrollViewer>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Grid>

