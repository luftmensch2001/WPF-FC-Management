                        CornerRadius="12" Margin="0 60 0 0"
                        Width="450" Height="460" VerticalAlignment="Top">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.8*"/>
                                <ColumnDefinition Width="0.8*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="Margin" Value="20, 30, 0, 5"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </Grid.Resources>
                            <Grid Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Text="Quy định" HorizontalAlignment="Center" Margin="0, 20, 0, 10"/>
                                    <Rectangle Fill="Gray" Height="1" VerticalAlignment="Bottom" />
                                    <TextBlock Text="Số đội tham gia" />
                                    <TextBlock Text="Số cầu thủ tối thiểu / đội" />
                                    <TextBlock Text="Số cầu thủ tối đa / đội" />
                                    <TextBlock Text="Tuổi tối thiểu" />
                                    <TextBlock Text="Tuổi tối đa" />
                                    <TextBlock Text="Số cầu thủ nước ngoài tối đa"/>
                                    <TextBlock Text="Số đội vào vòng loại / bảng"/>
                                </StackPanel>
                                <Rectangle Fill="Gray" Width="1" HorizontalAlignment="Right" />
                            </Grid>

                            <Grid Grid.Column="1">
                                <StackPanel>
                                    <TextBlock Text="Giá trị" HorizontalAlignment="Center" Margin="0, 20, 0, 10"/>
                                    <Rectangle Fill="Gray" Height="1" VerticalAlignment="Bottom" />
                                    <TextBlock Text="16" x:Name="tblCountOfTeams"/>
                                    <TextBlock Text="13" x:Name="tblMinCountPlayers"/>
                                    <TextBlock Text="18" x:Name="tblMaxCountPlayers"/>
                                    <TextBlock Text="18" x:Name="tblMinAge"/>
                                    <TextBlock Text="35" x:Name="tblMaxAge"/>
                                    <TextBlock Text="3" x:Name="tblMaxForeign"/>
                                    <TextBlock Text="2" x:Name="tbNumberOfTeamsIn"/>
                                </StackPanel>
                                <Rectangle Fill="Gray" Width="1" HorizontalAlignment="Right" />
                            </Grid>


                            <Grid Grid.Column="2">
                                <StackPanel>
                                    <StackPanel.Resources>
                                        <Style TargetType="Button" BasedOn="{StaticResource MyGreenButtonStyle}">
                                            <Setter Property="Height" Value="30"/>
                                            <Setter Property="Background" Value="#4554ff"/>
                                            <Setter Property="MinWidth" Value="0" />
                                            <Setter Property="Width" Value="40" />
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0 25.4 0 1" />
                                        </Style>
                                    </StackPanel.Resources>

                                    <TextBlock Text="Sửa" HorizontalAlignment="Center" Margin="0, 20, 0, 10"/>
                                    <Rectangle Fill="Gray" Height="1" VerticalAlignment="Bottom" />

                                    <Button x:Name="btEditS0">
                                        <materialDesign:PackIcon 
                                            Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="0"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <Button x:Name="btEditS1">
                                        <materialDesign:PackIcon
                                            Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="1"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <Button x:Name="btEditS2">
                                        <materialDesign:PackIcon 
                                            Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="2"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <Button x:Name="btEditS3">
                                        <materialDesign:PackIcon 
                                            Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="3"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <Button x:Name="btEditS4">
                                        <materialDesign:PackIcon
                                            Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="4"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <Button x:Name="btEditS5">
                                        <materialDesign:PackIcon 
                                            Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="5"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <Button x:Name="btEditS6">
                                        <materialDesign:PackIcon
                                            Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="6"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                </StackPanel>
                                <Rectangle Fill="Gray" Width="1" HorizontalAlignment="Right" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <!--Ranking rules-->
                    <TextBlock Text="Quy định xếp hạng"
                               Foreground="White" FontSize="16"
                               HorizontalAlignment="Center" Margin="0 30 0 0"/>
                    <Border
                        Width="350" Height="190"
                        BorderThickness="1" BorderBrush="White" CornerRadius="12"
                        VerticalAlignment="Top" Margin="0 60 0 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.3*"/>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="Margin" Value="40, 15, 0, 5"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </Grid.Resources>
                            <Grid Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Text="Kết quả" HorizontalAlignment="Center" Margin="0, 20, 0, 10"/>
                                    <Rectangle Fill="Gray" Height="1" VerticalAlignment="Bottom" />
                                    <TextBlock Text="Thắng" />
                                    <TextBlock Text="Hoà" />
                                    <TextBlock Text="Thua" />
                                </StackPanel>
                                <Rectangle Fill="Gray" Width="1" HorizontalAlignment="Right" />
                            </Grid>

                            <Grid Grid.Column="1">
                                <StackPanel>
                                    <TextBlock Text="Điểm" HorizontalAlignment="Center" Margin="0, 20, 0, 10"/>
                                    <Rectangle Fill="Gray" Height="1" VerticalAlignment="Bottom" />
                                    <TextBlock Text="3" x:Name="tbScoreWin"/>
                                    <TextBlock Text="1" x:Name="tbScoreDraw"/>
                                    <TextBlock Text="0" x:Name="tbScoreLose"/>
                                </StackPanel>
                                <Rectangle Fill="Gray" Width="1" HorizontalAlignment="Right" />
                            </Grid>

                            <Grid Grid.Column="2">
                                <StackPanel>
                                    <StackPanel.Resources>
                                        <Style TargetType="Button" BasedOn="{StaticResource MyGreenButtonStyle}">
                                            <Setter Property="Height" Value="30"/>
                                            <Setter Property="Background" Value="#4554ff"/>
                                            <Setter Property="MinWidth" Value="0" />
                                            <Setter Property="Width" Value="40" />
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0 10 0 2" />
                                        </Style>
                                    </StackPanel.Resources>

                                    <TextBlock Text="Sửa" HorizontalAlignment="Center" Margin="0, 20, 0, 10"/>
                                    <Rectangle Fill="Gray" Height="1" VerticalAlignment="Bottom" />

                                    <Button x:Name="btEditS7">
                                        <materialDesign:PackIcon
                                                Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                           CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="7"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <Button x:Name="btEditS8">
                                        <materialDesign:PackIcon
                                                Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                           CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="8"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                    <Button x:Name="btEditS9">
                                        <materialDesign:PackIcon
                                                Kind="Pencil" Width="15" Height="15"/>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="Click">
                                                <i:InvokeCommandAction Command="{Binding OpenEditDialogCommand}"
                                                           CommandParameter="{Binding ElementName=wdHome}"/>
                                            </i:EventTrigger>
                                            <i:EventTrigger EventName="MouseMove">
                                                <i:InvokeCommandAction Command="{Binding GetIdSettingCommand}"
                                                       CommandParameter="9"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </Button>

                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                    <!--Types of goal-->
                    <DataGrid
                        x:Name="dgvTypeOfGoal"
                        ItemsSource="{Binding Items2}"
                        HorizontalGridLinesBrush="White" 
                        GridLinesVisibility="All"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        VerticalGridLinesBrush="White"
                        SelectionUnit="FullRow"
                        SelectionMode="Single"
                        Width="350" Height="200"
                        CanUserResizeRows="False"
                        CanUserDeleteRows="False"
                        CanUserAddRows="False" 
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        BorderBrush="White" BorderThickness="1"
                        Background="Transparent" Foreground="White"
                        VerticalAlignment="Bottom" Margin="0 0 0 100">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Foreground" Value="White" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Header="STT"
                                Width="100"
                                Binding="{Binding Path=id}"/>
                            <DataGridTextColumn
                                Header="Loại bàn thắng"
                                Width="248"
                                Binding="{Binding Path=displayName}"/>
                        </DataGrid.Columns>

                    </DataGrid>
                    <StackPanel 
                        Orientation="Horizontal"
                        Width="350"  Height="45"
                        VerticalAlignment="Bottom" Margin="0 0 0 50">
                        <Button 
                            x:Name="btnAddGoalType"
                            Content="Thêm"
                            Style="{StaticResource MyGreenButtonStyle}" 
                            Width="100">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding OpenAddGoalTypeCommand}"
                                                           CommandParameter="{Binding ElementName=wdHome}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>

                        <Button 
                            x:Name="btnEditGoalType"
                            Content="Sửa"
                            Style="{StaticResource MyGreenButtonStyle}"
                            Background="#4554ff"
                            Width="100" Margin="25 0 0 0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding OpenEditGoalTypeCommand}"
                                                           CommandParameter="{Binding ElementName=wdHome}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>

                        <Button 
                            x:Name="btnDeleteGoalType"
                            Content="Xoá"
                            Style="{StaticResource MyRedButtonStyle}" 
                            Width="100" Margin="25 0 0 0">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding DeleteGoalTypeCommand}"
                                                           CommandParameter="{Binding ElementName=wdHome}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
            
            <!--Goal's Types-->
        </Grid>
        <!--#endregion-->

        <!--#region HELPS-->
        <Grid Grid.Column="1"
              x:Name="grdHelpsScreen"
              Visibility="Hidden" Background="#3a3a3a">
