        <Grid Grid.Column="1"
              x:Name="grdSettingScreen"
              Visibility="Hidden"
              Background="#3a3a3a">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <!--Title-->
            <Grid Grid.Row="0">
                <TextBlock 
                    Text="QUY ĐỊNH" Style="{StaticResource H1}" FontSize="35"/>
                <Image 
                    Width="120" HorizontalAlignment="Left" Margin="160 0 0 0" 
                    Source="/Resource/Images/players.png"/>

                <Image 
                    Width="120" HorizontalAlignment="Right" Margin="0 0 120 0" 
                    Source="/Resource/Images/football.png"/>
                <Rectangle Fill="Gray" Height="1" VerticalAlignment="Bottom" />
            </Grid>
            <!--Body-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--General rules-->
                <Grid Grid.Column="0">
                    <TextBlock Text="Quy định chung"
                               Foreground="White" FontSize="16"
                               HorizontalAlignment="Center" Margin="0 30 0 0"/>
                    <Border 
