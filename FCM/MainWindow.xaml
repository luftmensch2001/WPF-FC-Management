<Window x:Class="FCM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FCM"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="Phần mềm quản lý giải bóng đá" Height="850" Width="1500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        x:Name="wdHome"
        DataContext="{StaticResource MainVM}"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        
        <!--Menu side bar-->
        <Grid Grid.Column="0"
              Background="#282823">
            <!--Stroke (+65 margin_top / item) -->
            <Grid
              x:Name="grdStroke"
              Background="#52FF00"
              Height="50"
              Width="10"
              Panel.ZIndex="1"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Margin="0 230 0 0">

            </Grid>

            <!--Software logo-->
            <Grid Height="150"
                  VerticalAlignment="Top"
                  Margin="0 40 0 0">
                <Image Source="/software-logo.png"/>
            </Grid>      
            
            <!--Stack Panel Menu-->
            <StackPanel x:Name="stpMenu"
                        Margin="0 230 0 0">

                <!--Grid Home-->
                <Grid x:Name="grdHome"
                      Height="60"
                      Margin="0 0 0 0">
                    
                    
                    <materialDesign:PackIcon 
                        x:Name="icHome"
                        Kind="Home"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Center"
                        Margin="40 0 0 0"
                        Foreground="#52FF00"/>
                    <Button 
                            Content="TRANG CHỦ"
                            Foreground="#52FF00"
                            x:Name="btnHome"
                            Uid="0"
                            Height="60"
                            Width="295"
                            FontSize="20"                  
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Padding="80 0 0 0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center">

                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnHome}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                    </Button>
                </Grid>


                <!--Grid Leagues-->
                <Grid x:Name="grdLeagues"
                      Height="60"
                      Margin="0 5 0 0">


                    <materialDesign:PackIcon 
                        x:Name="icLeagues"
                        Kind="Security"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Center"
                        Margin="40 0 0 0"
                        Foreground="#fff"/>
                    <Button 
                            x:Name="btnLeagues"
                            Content="GIẢI ĐẤU"
                            Uid="1"
                            Height="60"
                            Width="295"
                            FontSize="20"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Padding="80 0 0 0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnLeagues}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>

                <!--Grid Schedule-->
                <Grid x:Name="grdSchedule"
                      Height="60"
                      Margin="0 5 0 0">


                    <materialDesign:PackIcon 
                        x:Name="icSchedule"
                        Kind="CalendarMonth"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Center"
                        Margin="40 0 0 0"
                        Foreground="#fff"/>
                    <Button x:Name="btnSchedule" 
                            Content="LỊCH THI ĐẤU"
                            Height="60"
                            Width="295"
                            FontSize="20"
                            Uid="2"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Padding="80 0 0 0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnSchedule}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                    </Button>
                </Grid>

                <!--Grid Teams-->
                <Grid x:Name="grdTeams"
                      Height="60"
                      Margin="0 5 0 0">


                    <materialDesign:PackIcon 
                        Kind="HumanCapacityDecrease"
                        x:Name="icTeams"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Center"
                        Margin="40 0 0 0"
                        Foreground="#fff"/>
                    <Button x:Name="btnTeams" 
                            Content="ĐỘI BÓNG"
                            Height="60"
                            Width="295"
                            FontSize="20"
                            Uid="3"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Padding="80 0 0 0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnTeams}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>

                <!--Grid Standing-->
                <Grid x:Name="grdStanding"
                      Height="60"
                      Margin="0 5 0 0">


                    <materialDesign:PackIcon 
                        Kind="ChartBoxOutline"
                        x:Name="icStanding"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Center"
                        Margin="40 0 0 0"
                        Foreground="#fff"/>
                    <Button x:Name="btnStanding" 
                            Content="BẢNG XẾP HẠNG"
                            Height="60"
                            Width="295"
                            Uid="4"
                            FontSize="20"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Padding="80 0 0 0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnStanding}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>

                <!--Grid Statistics-->
                <Grid x:Name="grdStatistics"
                      Height="60"
                      Margin="0 5 0 0">


                    <materialDesign:PackIcon 
                        Kind="ChartLine"
                        x:Name="icStatistics"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Center"
                        Margin="40 0 0 0"
                        Foreground="#fff"/>
                    <Button 
                            Content="THỐNG KÊ"
                            Height="60"
                            Width="295"
                            FontSize="20"
                            x:Name="btnStatistics"
                            Uid="5"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Padding="80 0 0 0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnStatistics}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>

                <!--Grid Setting-->
                <Grid x:Name="grdSetting"
                      Height="60"
                      Margin="0 5 0 0">


                    <materialDesign:PackIcon 
                        Kind="CogOutline"
                        x:Name="icSetting"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Center"
                        Margin="40 0 0 0"
                        Foreground="#fff"/>
                    <Button 
                            Content="QUY ĐỊNH"
                            Height="60"
                            Width="295"
                            FontSize="20"
                            x:Name="btnSetting"
                            Uid="6"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Padding="80 0 0 0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnSetting}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>

                <!--Grid Help-->
                <Grid x:Name="grdHelp"
                      Height="60"
                      Margin="0 5 0 0">


                    <materialDesign:PackIcon 
                        Kind="Help"
                        x:Name="icHelp"
                        Height="30"
                        Width="30"
                        VerticalAlignment="Center"
                        Margin="40 0 0 0"
                        Foreground="#fff"/>
                    <Button 
                            Content="TRỢ GIÚP"
                            Height="60"
                            Width="295"
                            FontSize="20"
                            x:Name="btnHelp"
                            Uid="7"
                            Background="Transparent"
                            BorderBrush="{x:Null}"
                            Padding="80 0 0 0"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnHelp}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>

                    </Button>
                </Grid>

            </StackPanel>
        </Grid>
        <!--End Menu Side Bar-->

        <Grid Grid.Column="1">
            
        </Grid>
        
    </Grid>
</Window>
